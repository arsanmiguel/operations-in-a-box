# Environment variables for crowdstrike-falcon
# Copy this to .env and customize

PLUGIN_NAME=crowdstrike-falcon
PLUGIN_ENABLED=true

# Service Configuration
SERVICE_PORT=9135
SERVICE_IMAGE=crowdstrike/falcon-sensor:latest

FALCON_CLIENT_ID=your-falcon-client-id
FALCON_CLIENT_SECRET=your-falcon-client-secret
FALCON_CLOUD=us-1
FALCON_CID=your-customer-id

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30s
LOG_LEVEL=INFO

# Performance Settings
MAX_CONNECTIONS=100
TIMEOUT_SECONDS=30
RETRY_ATTEMPTS=3
