# Environment variables for saml-auth
# Copy this to .env and customize

PLUGIN_NAME=saml-auth
PLUGIN_ENABLED=true

# Service Configuration
SERVICE_PORT=9114
SERVICE_IMAGE=nginx:alpine

SAML_IDP_URL=https://your-idp.com/saml
SAML_ENTITY_ID=monitoring-stack
SAML_CERT_PATH=/etc/ssl/certs/saml.crt
SAML_KEY_PATH=/etc/ssl/private/saml.key

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30s
LOG_LEVEL=INFO

# Performance Settings
MAX_CONNECTIONS=100
TIMEOUT_SECONDS=30
RETRY_ATTEMPTS=3
