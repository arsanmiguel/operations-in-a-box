# Environment variables for aws-vpc-flow-logs
# Copy this to .env and customize

PLUGIN_NAME=aws-vpc-flow-logs
PLUGIN_ENABLED=true

# Service Configuration
SERVICE_PORT=9215
SERVICE_IMAGE=alpine:latest

SERVICE_NAME=aws-vpc-flow-logs
SERVICE_ENABLED=true

# AWS Configuration
AWS_REGION=us-east-1
LOG_GROUP_NAME=/aws/vpc/flowlogs
FLOW_LOG_FORMAT=default

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30s
LOG_LEVEL=INFO

# Performance Settings
MAX_CONNECTIONS=100
TIMEOUT_SECONDS=30
RETRY_ATTEMPTS=3

# Analysis Settings
TOP_TALKERS_LIMIT=10
AGGREGATION_INTERVAL=300
