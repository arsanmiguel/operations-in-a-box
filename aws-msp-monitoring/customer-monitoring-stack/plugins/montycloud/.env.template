# Environment variables for montycloud
# Copy this to .env and customize

PLUGIN_NAME=montycloud
PLUGIN_ENABLED=true

# Service Configuration
SERVICE_PORT=9120
SERVICE_IMAGE=montycloud/governance-connector:latest

MONTYCLOUD_API_KEY=your-montycloud-api-key
MONTYCLOUD_TENANT_ID=your-tenant-id
MONTYCLOUD_REGION=us-east-1
GOVERNANCE_POLICIES=security,cost,compliance

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30s
LOG_LEVEL=INFO

# Performance Settings
MAX_CONNECTIONS=100
TIMEOUT_SECONDS=30
RETRY_ATTEMPTS=3
