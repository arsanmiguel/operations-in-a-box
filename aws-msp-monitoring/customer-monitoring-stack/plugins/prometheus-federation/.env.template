# Environment variables for prometheus-federation
# Copy this to .env and customize

PLUGIN_NAME=prometheus-federation
PLUGIN_ENABLED=true

# Service Configuration
SERVICE_PORT=9109
SERVICE_IMAGE=prom/prometheus:latest

PROMETHEUS_FEDERATION_TARGETS=prometheus1:9090,prometheus2:9090
PROMETHEUS_RETENTION_TIME=15d
PROMETHEUS_STORAGE_PATH=/prometheus
PROMETHEUS_WEB_EXTERNAL_URL=http://localhost:9109

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30s
LOG_LEVEL=INFO

# Performance Settings
MAX_CONNECTIONS=100
TIMEOUT_SECONDS=30
RETRY_ATTEMPTS=3
